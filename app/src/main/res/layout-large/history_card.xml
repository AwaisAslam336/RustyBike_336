<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardElevation="5dp"
    android:clipToPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:weightSum="5"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:id="@+id/count_tv"
            android:text="1"
            android:textStyle="bold"
            android:textColor="#f46d00"
            android:layout_marginLeft="5dp"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/history_card_img"
                android:src="@drawable/uber_icon"/>
        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:id="@+id/history_card_txt"
            android:text="345689"
            android:textColor="#f46d00"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/r1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="right">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Move Back"
                    android:textSize="16sp"
                    android:id="@+id/history_card_moveback_btn"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/login_btn_bg"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_toRightOf="@id/r1"
                android:gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Delete"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:id="@+id/history_card_delet_btn"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:background="@drawable/delet_btn_bg"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>